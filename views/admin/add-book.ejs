<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<link rel="stylesheet" href="css/add-book.css">
</head>
<body>
    <%- include('../includes/header.ejs')%>
    <form class="add-book-form" action="/add-book" method="POST">
       <div class="form-control">
        <label for="title">Title</label>  
        <input type="text" name="title" id="title" required>  
       </div>
       <div class="form-control">
        <label for="author">Author</label>  
        <input type="text" name="author" id="author" required>
       </div>
       <div class="form-control">
        <label for="year">Year</label>  
        <input type="number" name="year" id="year" min="1">
       </div>
       <div class="form-control">
        <label for="image">Image</label>
        <input type="file" name="image" id="image" >
       </div>
       <div class="form-control">
        <label for="description">Description</label>  
        <textarea type="text" name="description" id="description" rows="7"></textarea>
       </div>
       <button type="submit" class="button">Submit</button>  
      </form>
</body>