<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="css/my-requests.css">
</head>
<body>
<%- include('../includes/header.ejs')%>
<main>
    <% if(requests.length > 0) { %>
       <ul class="request__item-list">
           <% requests.forEach(request => { %>
                <li class="request__item">
                   <img src="<%= request.book.imageUrl %>" id="book_img" >
                   <div>
                    <h2>Book: <%= request.book.title %></h2>
                    <h6>Requested on <%=request.startDate.toLocaleDateString("en-US",{year:'numeric', month:'long', day:'numeric'})%></h6>
                   </div>
                   <form action="/cancel-request" method="POST">
                    <input type="hidden" value="<%= request._id %>" name="requestId">
                    <button class="btn danger" type="submit">Delete</button>
                   </form>
                </li>
            <% }) %>    
       </ul>    
    <% } %>   
</main>
</body>
</html>